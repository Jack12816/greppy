- var page       = pagination.page
- var count      = pagination.count
- var limit      = pagination.limit
- var pagesCount = Math.ceil(count / limit)

.paginator
  .pull-right.medium-left-margin
    ul.pagination.small-bottom-margin
      - if (1 == page)
        li.disabled
          a(data-page="1")
            i.fa.fa-angle-double-left
      - else
        li
          a(data-page="#{page - 1}").pointer
            i.fa.fa-angle-double-left
      - for (var i = (page - 5); i <= (((page + 5) > pagesCount) ? pagesCount : (page + 5)); i++)
        - if (0 < i)
          - if (i == page)
            li.active
              a #{i}
          - else
            li
              a(data-page="#{i}").pointer #{i}
      - if (pagesCount == page)
        li.disabled
          a(data-page="#{page}")
            i.fa.fa-angle-double-right
      - else
        li
          a(data-page="#{page + 1}").pointer
            i.fa.fa-angle-double-right

  .pull-right
    select#pagination-limit.form-control
      - each size in pagination.pageSizes
        option(selected=(size == limit)) #{size}

